// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String?
  email      String?  @unique
  password   String?  // store hashed passwords using bcrypt, for example
  role       String   // e.g. "admin", "employee". Adjust validation in your API if needed.
  createdAt  DateTime @default(now())
}
