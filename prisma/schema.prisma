generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String?
  email        String?  @unique
  password     String?
  role         String
  otp          String?
  otpExpiresAt DateTime?
  createdAt    DateTime @default(now())
}

// NEW: Employee model
model Employee {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  employeeId   String   @unique
  department   String
  designation  String
  type         String    // Office | Remote
  status       String    // Permanent | Contractual
  avatar       String?   // Optional avatar URL
  createdAt    DateTime  @default(now())
}
